            }
          ],
          "events": [
            {
              "type": "BuiltinCommonInstructions::Standard",
              "conditions": [
                {
                  "type": {
                    "value": "VariableChildExists"
                  },
                  "parameters": [
                    "__Fireside.Response",
                    "\"error\""
                  ]
                }
              ],
              "actions": [
                {
